<div class="d-flex">
  <%= render "shared/sidebar" %>
  <div class="pages-content flex-grow-1">
    <div class="tasks-networks">
      <div class="tasks">
        <div class="board-info">
          <li><%= "RECENT TASKS" %></li>
          <li><%= link_to "See All Tasks", tasks_path(@tasks) %></li>
        </div>
        <div class="tasks-info">
          <li>TASK NAME</li>
          <li>TECHNICIAN</li>
          <li>CREATED</li>
          <li>NETWORK</li>
        </div>
        <% @tasks.last(5).reverse.each do |task| %>
          <div class="task-details">
            <li> <%= task.service.name %> </li>
            <li> <%= task.technician.first_name.capitalize %> <%= task.technician.last_name.capitalize %></li>
            <li> <%= time_ago_in_words(task.created_at) %> ago </li>
            <li> <%= task.network.name %> </li>
          </div>
        <% end %>
      </div>
      <div class="networks">
        <div class="network-info">
          <li><%= "NETWORKS" %></li>
          <li><%= link_to "See All Networks", networks_path(@networks) %></li>
        </div>
        <div class="network-chart">
          <div class="pie-chart-home">
            <%= bar_chart Task.joins(:network).group("networks.name").count, colors: ["#0073DE", "#E4C9A0"], height: "220px", xtitle: "Total", discrete: true, label: "TOTAL OF TASKS" %>
          </div>
          </div>
        </div>
      </div>
    </div>
    <div class="stats">
    </div>
  </div>
</div>
