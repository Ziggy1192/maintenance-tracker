<div class="d-flex">
  <%= render "shared/sidebar" %>

    <div class="chart-content flex-grow-1">

      <div class="top-charts">
        <div class="top-left-charts">
          <div class="pie">
            <p> No. of task completed</p>
            <%= pie_chart Task.group(:complete_task).count, colors: ["#F69E36", "#0D6EFD"], legend: false, width: "100px", height: "100px", donut: true  %>
          </div>
          <div class="pie">
            <p> Total number of services</p>
            <%= pie_chart Network.joins(:tasks).joins(:services).group('services.name').count, colors: ["#F69E36", "#0D6EFD", "#20603D", "#E4C9A0"], legend: false, width: "100px", height: "100px"  %>
          </div>
          <div class="pie">
            <p> No. of task completed</p>
            <%= pie_chart Task.group(:complete_task).count, colors: ["#F69E36", "#0D6EFD"], legend: false, width: "100px", height: "100px", donut: true  %>
          </div>
          <div class="pie">
            <p> No. of task completed</p>
            <%= pie_chart Task.group(:complete_task).count, colors: ["#F69E36", "#0D6EFD"], legend: false, width: "100px", height: "100px", donut: true  %>
          </div>

        </div>

          <div class="column">
            <p>Total number of task by technician</p>
            <div class="column-chart">
            <%= bar_chart Task.joins(:technician).group("users.first_name").count, colors: ["#F69E36", "#0D6EFD"], height: "220px", xtitle: "Total", discrete: true, label: "TOTAL OF TASKS" %>
            </div>
          </div>
      </div>



          <div class="line">
            <p>Total number of task each month</p>
            <div class="line-chart">
          <%= line_chart Task.group_by_month(:end_date).count, colors: ["#F69E36", "#0D6EFD"], legend: false, height: "220px", discrete: true, label: "TOTAL OF TASKS"  %>
            </div>
          </div>

          <div class="bar">
            <p>Complete and Incomplete Tasks over Time</p>
            <div class="bar-chart">
            <%= column_chart Task.group(:complete_task).group_by_month(:end_date).count, stacked: true, colors: ["#F69E36", "#0D6EFD"], legend: false, height: "220px", discrete: true, label: ["INCOMPLETE TASKS", "COMPLETE TASKS"] %>

            </div>
          </div>


      <%# pie_chart Task.joins(:equipment).group("tasks.idequipments.name"), legend: false %>
    </div>
</div>
