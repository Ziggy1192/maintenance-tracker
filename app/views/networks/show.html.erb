
<div class="d-flex">
  <%= render "shared/sidebar" %>
    <div class="networks-info-index flex-grow-1">
      <div class="flex-container flex-grow-1">

        <div class="info-network flex-grow-1">
          <div class="top-info-network">
          <h1> NETWORK: <%= @network.name.upcase %></h1>
          <h2>WATERPOINTS:</h2>
          <h3> LAST MAINTENANCE CHECK: <%= @network.tasks.last %></h3>
          </div>

            <div class="installed-equipment-info">
              <div class="equipment-header">
                <h2>COMPLETED TASKS</h2>
                  <li>TASK NAME</li>
                  <li></li>
              </div>
            </div>














            <div style="width: 100%; height: 600px;"
              data-controller="map"
              data-map-markers-value="<%= @markers.to_json %>"
              data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
